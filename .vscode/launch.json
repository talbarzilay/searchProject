{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },

        {
            "name": "Python: unittest",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}